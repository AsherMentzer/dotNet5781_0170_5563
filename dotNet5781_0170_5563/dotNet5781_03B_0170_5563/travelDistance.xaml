        <Label Content="choose driver:"  HorizontalAlignment="Left" Margin="18,33,0,0" VerticalAlignment="Top" Width="89"/>
        <ComboBox x:Name="cbDriver"  HorizontalAlignment="Left" Margin="139,36,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.505,0.506" SelectionChanged="cbDriver_SelectionChanged"/>

    </Grid>
</Window>
